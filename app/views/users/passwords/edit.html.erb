<div style="text-align:center;">
  <h1 class="h3 mb-3 font-weight-normal"><%= image_tag 'favicon.png', :size =>'40x40'%>スマート予約　パスワードリセット</h1>
  <h3>管理者</h3>
  <div class="card mx-auto devise-card-width" id="devise_card_style">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put , :class => "form-signin"}) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <label class="text-left">新しいパスワードをご入力ください。</label><br>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "確認パスワード" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
      </div>

      <div class="actions mt-5">
        <%= f.submit "パスワードを更新", class:"btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>

<footer class="footer mt-auto py-3" id="new_footer_style">
  <div class="container text-right">
          <%= link_to "利用規約", use_path %> | 
          <%= link_to "特定商取引法に基づく表示", law_path %> |
          <%= link_to "プライバシーポリシー", privacy_path %>
  </div>
</footer>



