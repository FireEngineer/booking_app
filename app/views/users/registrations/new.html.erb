<div style="text-align:center;">
  <h1 class="h3 mb-3 font-weight-normal"><%= image_tag 'favicon.png', :size =>'40x40'%>スマート予約を始めましょう。</h1>
  <p>スマート予約のご利用には、アカウントの作成が必要です。</p>
  <div class="card mx-auto w-50" id="devise_card_style">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
      <%= devise_error_messages! %>
      <label class="text-left">アカウント情報を入力してくだい。<br>後から、変更ができます。</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"inputEmail", placeholder:"Emailアドレス", required:"required", autofocus:"autofocus" %>
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"パスワード", required:"required" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"確認用パスワード", required:"required" %>
      <% if devise_mapping.rememberable? -%>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "登録", class:"btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>

<footer class="footer mt-auto py-3" id="new_footer_style">
  <div class="container text-right">
          <%= link_to "利用規約", use_path %> | 
          <%= link_to "特定商取引法に基づく表示", law_path %> |
          <%= link_to "プライバシーポリシー", privacy_path %>
  </div>
</footer>
