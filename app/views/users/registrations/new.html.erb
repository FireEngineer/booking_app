<div style="text-align:center;">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
    <%= devise_error_messages! %>
    <h1 class="h3 mb-3 font-weight-normal">アカウント登録</h1>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"inputEmail", placeholder:"Emailアドレス", required:"required", autofocus:"autofocus" %>
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"パスワード", required:"required" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"確認用パスワード", required:"required" %>
    <% if devise_mapping.rememberable? -%>
      <div class="form-check mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "登録", class:"btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>
