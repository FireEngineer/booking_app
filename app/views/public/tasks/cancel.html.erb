<div class="complete_page">
  <div class="title">
    <h2>キャンセルフォーム</h2>
  </div>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>予約内容</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">お名前</th>
        <td><%= @task.name %></td>
      </tr>
      <tr>
        <th scope="row">メールアドレス</th>
        <td><%= @task.email %></td>
      </tr>
      <tr>
        <th scope="row">予約時間</th>
        <td><%= reservation_date("#{@task.date_time}") %></td>
      </tr>
    </tbody>
  </table>

  <%= link_to "戻る", calendar_tasks(params[:user_id]), class:"btn btn-secondary btn_style" %>
  <%= link_to "キャンセルを行う", user_task_path(params[:user_id], @task), class:"btn btn-secondary btn_style", method: :delete ,data: {confirm: "本当にキャンセルを行いますか？" } %>
</div>



