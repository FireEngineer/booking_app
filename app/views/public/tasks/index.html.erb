<div class="top_page">
  <div class="title">
    <h2 class="title_style mt-3">予約フォーム</h2>
  </div>
    <%# スタッフ選択 %>
  <div>
    <h5 class="text-left ">担当スタッフを選択</h5>
    <div class="select_form">
      <table width="100%" border="0" cellpadding="0" cellspacing="0" class="table table-sm table-clickable" id="res_step_cat">
        <tbody>
          <% @calendar.staffs.each do |staff| %>
            <% if @staff == staff %>
              <tr class="select_tr selected" data-href="<%= calendar_tasks_path(@calendar, course_id: @task_course.id, staff_id: staff.id) %>" >
                <td id="categ_id_5" class="text-left">
                  <i class="fas fa-check mr-2 text-primary"></i></i><span><%= staff.name %></span>
                </td>
              </tr>
            <% else %>
              <%= link_to calendar_tasks_path(@calendar, course_id: @task_course.id, staff_id: staff.id) do %>
                <tr class="select_tr" data-href="<%= calendar_tasks_path(@calendar, course_id: @task_course.id, staff_id: staff.id) %>">
                  <td id="categ_id_5" class="text-left">
                    <i class="fas fa-angle-right mr-2"></i><span><%= staff.name %></span>
                  </td>
                </tr>
              <% end %>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

    <%# コースの選択 %>
    <div>
      <h5 class="text-left ">コースを選択</h5>
      <div class="select_form">
        <table width="100%" border="0" cellpadding="0" cellspacing="0" class="table table-sm table-clickable" id="res_step_cat">
          <tbody>
            <% @calendar.task_courses.each do |course| %>
              <% if @task_course == course %>
                <tr class="select_tr selected" data-href="<%= calendar_tasks_path(@calendar, course_id: course.id, staff_id: @staff.id) %>">
                  <td id="categ_id_5" class="text-left">
                    <i class="fas fa-check mr-2 text-primary"></i><span><%= course.title %></span>
                  </td>
                </tr>
              <% else %>
                <tr class="select_tr" data-href="<%= calendar_tasks_path(@calendar, course_id: course.id, staff_id: @staff.id) %>">
                  <td id="categ_id_5" class="text-left">
                    <i class="fas fa-angle-right mr-2"></i><span><%= course.title %></span>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  <%= paginate @month %>
    <div class="tabel_scroll">
      <table class="table  table-bordered">
        <thead>
          <tr>
            <th scope="col">時間</th>
            <% @month.each do |day| %>
              <th scope="col"><%= l(day, format: :top) %></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @times.each do |time| %>
            <tr>
              <th scope="row"><%= l( time, format: :very_short) %></th>
              <% @month.each.with_index do |day, index| %>
                <% time_str = time(day, time) %>
                  <% if ValidateTask.call(@events, time_str, @task_course) && ValidateStaffShift.call(@staff, time_str, @task_course) && !RegularDay.call(@calendar, day) && time_str.to_time >= Time.current.since(@calendar.display_time.hours) && ValidateTask.call(@google_events, time_str, @task_course)   %>
                    <td class="possible">
                      <%= link_to new_calendar_task_path(@calendar, start_time: time(Time.zone.parse("#{day}"), time), course_id: @task_course.id, staff_id: @staff.id) do %>
                        <i class="far fa-circle"></i>
                      <% end %>
                    </td>
                  <% else %>
                    <td class="impossible">
                      <i class="fas fa-times"></i>
                    </td>
                  <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>

<script>
  $(function(){
  $('tr[data-href]', 'table.table-clickable').on('click', function(){
    location.href = $(this).data('href');
  });
});
</script>

