<div style="text-align:center;">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
    <%= devise_error_messages! %>
    <h1 class="h3 mb-3 font-weight-normal">スタッフログイン</h1>
      <%= f.label :email, "メールアドレス", class:"sr-only" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"inputEmail", placeholder:"Emailアドレス", required:"required" %>
      <%= f.label :password, "パスワード", class:"sr-only" %>
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control", id:"inputPassword", placeholder:"パスワード", required:"required" %>

    <% if devise_mapping.rememberable? -%>
      <div class="form-check mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label "ログインを記憶" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "ログイン", class:"btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>
  <%= render "staffs/shared/links" %>
</div>
