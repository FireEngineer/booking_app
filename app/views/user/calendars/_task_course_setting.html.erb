
<%= link_to "コース新規作成", new_user_calendar_task_course_path(current_user, calendar), remote: true, class:"btn btn-primary" %>
<div id="new_course_modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<table class="table table-hover table-responsive-md">
    <thead>
    <tr>
        <th>コース名</th>
        <th>説明</th>
        <th>コース時間</th>
        <th>コース料金</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    <% calendar.task_courses.each do |course| %>
        <tr>
        <th scope="row"><%= course.title %></th>
        <td><%= course.description %></td>
        <td><%= course.course_time %></td>
        <td><%= course.charge %></td>
        <td>
            <%= link_to "編集", edit_user_calendar_task_course_path(current_user, calendar, course), remote: true, class:"btn btn-success" %>
            <%= link_to "削除", user_calendar_task_course_path(current_user, calendar, course), method: :delete, class:"btn btn-danger", "data-confirm": "本当に削除しますか？" %>
            <div id="edit_course_<%= course.id %>_modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
        </td>
        </tr>
    <% end %>
    </tbody>
</table>
