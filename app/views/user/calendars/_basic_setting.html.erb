<%= form_for calendar, url: user_calendar_path(current_user, calendar) do |f| %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>項目</th>
          <th>設定値</th>
          <th>説明</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">表示開始日</th>
          <td><%= f.number_field :start_date, class: "form-control" %></td>
          <td>カレンダーの表示開始日の設定です。（1と設定すると、本日から1日後の明日のカレンダーから表示）</td>
        </tr>
        <tr>
          <th scope="row">表示終了日</th>
          <td><%= f.number_field :end_date, class: "form-control" %></td>
          <td>カレンダーの表示終了日の設定です。（6と設定すると、本日から6日後の日付で表示終了）</td>
        </tr>
        <tr>
          <th scope="row">表示期間</th>
          <td><%= f.number_field :display_week_term, class: "form-control" %></td>
          <td>googleカレンダーから取得するデータの期間を設定</td>
        </tr>
        <tr>
          <th scope="row">表示カレンダー名</th>
          <td><%= f.text_field :calendar_name, class: "form-control" %></td>
          <td>カレンダーの名前です。URLにも使用されます。一意の名前である必要があります。</td>
        </tr>
        <tr>
          <th scope="row">お店の住所</th>
          <td><%= f.text_field :address, class: "form-control" %></td>
          <td>お店の住所です。公開されます。</td>
        </tr>
        <tr>
          <th scope="row">お店の電話番号</th>
          <td><%= f.text_field :phone, class: "form-control" %></td>
          <td>お店の電話番号です。公開されます。</td>
        </tr>
      </tbody>
    </table>
    <%= f.label :is_released, "公開する場合はチェックを入れてください" %>
    <%= f.check_box :is_released, {} , "true", "false" %>
    <br>
    <%= f.submit "更新", class: "btn btn-primary" %>
<% end %>