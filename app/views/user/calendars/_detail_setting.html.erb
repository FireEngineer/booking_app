<%= form_for calendar.calendar_config, url: user_calendar_calendar_config_path(current_user, calendar) do |f| %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="col-xs-2">項目</th>
          <th class="col-xs-2">設定値</th>
          <th class="col-xs-10">説明</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>予約可能席数</th>
          <td><%= f.number_field :capacity, class: "form-control" %></td>
          <td></td>
        </tr>
      </tbody>
    </table>

    <table class="table table-hover">
      <thead>
        <tr>
          <th class="col-xs-2">曜日</th>
          <th>定休日フラグ</th>
        </tr>
      </thead>
      <tbody>
        <%= f.fields_for :regular_holidays do |f| %>
          <tr>
            <th class="col-xs-2"><%= f.object.day_of_the_week %></th>
            <td><%= f.check_box :holiday_flag, {class: "form-control"}, "true", "false" %></td>
          </tr>
        <% end %>
        <tr>
          <th class="col-xs-2"><%= f.submit "更新", class: "btn btn-primary" %></th>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    </table>
<% end %>