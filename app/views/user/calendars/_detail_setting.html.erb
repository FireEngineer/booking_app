<%= form_for calendar.calendar_config, url: user_calendar_calendar_config_path(current_user, calendar) do |f| %>
    <table class="table table-hover table-responsive-md">
      <thead>
        <tr>
          <th class="col-xs-2">項目</th>
          <th class="col-xs-2">設定値</th>
          <th class="col-xs-10">説明</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>予約間の余裕時間（分）</th>
          <td><%= f.number_field :interval_time, class: "form-control" %></td>
          <td>一つ一つの予約の間に準備時間を入れることができます。</td>
        </tr>
        <tr>
          <th>キャンセル可能時間設定</th>
          <td><%= f.number_field :cancelable_time, class: "form-control" %></td>
          <td>お客様が、web上でキャンセルが可能な時間（予約時間の何時間前）</td>
        </tr>
      </tbody>
    </table>

    <table class="table table-hover">
      <thead>
        <tr>
          <th class="col-xs-2">曜日</th>
          <th>定休日フラグ</th>
          <th>基本営業時間</th>
          <th>休憩フラグ</th>
          <th>基本休憩時間</th>
        </tr>
      </thead>
      <tbody>
        <%= f.fields_for :regular_holidays do |f| %>
          <tr>
            <th class="col-xs-2"><%= f.object.day_of_the_week %></th>
            <td><%= f.check_box :holiday_flag, {class: "form-control"}, "true", "false" %></td>
            <td>
              <%= raw sprintf(
              f.time_select(
                  :business_start_at,
                  use_month_numbers: true,
                  start_year:        1930,
                  end_year:          (Time.now.year - 18),
                  default:           Date.new(1989, 1, 1),
                  date_separator:    '%s'), # 年月日区切りをそれぞれ指定
              '年 ', '月 ')
               %>
              ~
              <%= raw sprintf(
              f.time_select(
                  :business_end_at,
                  use_month_numbers: true,
                  start_year:        1930,
                  end_year:          (Time.now.year - 18),
                  default:           Date.new(1989, 1, 1),
                  date_separator:    '%s'), # 年月日区切りをそれぞれ指定
              '年 ', '月 ')
              %>
            </td>
            <td><%= f.check_box :is_rest, {class: "form-control"}, "true", "false" %></td>
            <td>
              <%= raw sprintf(
              f.time_select(
                  :rest_start_time,
                  use_month_numbers: true,
                  start_year:        1930,
                  end_year:          (Time.now.year - 18),
                  default:           Date.new(1989, 1, 1),
                  date_separator:    '%s'), # 年月日区切りをそれぞれ指定
              '年 ', '月 ')
               %>
              ~
              <%= raw sprintf(
              f.time_select(
                  :rest_end_time,
                  use_month_numbers: true,
                  start_year:        1930,
                  end_year:          (Time.now.year - 18),
                  default:           Date.new(1989, 1, 1),
                  date_separator:    '%s'), # 年月日区切りをそれぞれ指定
              '年 ', '月 ')
              %>
            </td>
          </tr>
        <% end %>
        <tr>
          <th class="col-xs-2"><%= f.check_box :is_rest, {class: "form-control"}, "true", "false" %></th>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <th class="col-xs-2"><%= f.submit "更新", class: "btn btn-primary",data: {confirm: "更新しますか？"} %></th>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    </table>
<% end %>