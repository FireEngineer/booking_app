<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">予約システム決済</h1>
  <p></p>
</div>

<div class="container">
  <div class="card-deck mb-3 text-center">
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">有料プラン</h4>
      </div>
      <div class="card-body">
        <h1 class="card-title pricing-card-title">5000円 <small class="text-muted">/ 月</small></h1>
        <ul class="list-unstyled mt-3 mb-4">
          
        </ul>
        <%= form_with url: pay_create_order_path do |form| %>
            <script
            type="text/javascript"
            src="https://checkout.pay.jp/"
            class="payjp-button"
            data-key="<%= ENV['PAYJP_PUBLIC_KEY'] %>"
            data-text="決済情報入力"
            data-submit-text="決済を行う"
            >
          </script>
        <% end %>
      </div>
    </div>
  </div>
  <%= link_to "戻る", user_calendar_dashboard_path(current_user, current_user.calendars.first), class:"btn btn-primary" %>
</div>