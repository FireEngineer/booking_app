<div id="staff_new_modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>id</th>
            <th>名前</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% @staffs.each do |staff| %>
        <tr>
            <th scope="row"><%= staff.id %></th>
            <td><%= staff.name %></td>
            <td>
                <%= link_to "シフト設定", calendar_staff_staff_shifts_path(@calendar, staff), class:"btn btn-light" %>
            </td>
            <div id="staff<%= staff.id %>_edit_modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
        </tr>
    <% end %>
    </tbody>
</table>