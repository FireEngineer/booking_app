<h1>会員詳細</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">開始時間</th>
      <th scope="col">終了時間</th>
      <th scope="col">ご要望</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <th scope="row"><%= l(task.start_time, format: :long) %></th>
        <td><%= l(task.end_time, format: :long) %></td>
        <td><%= task.request %></td>
        <td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>