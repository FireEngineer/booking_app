<div>
  <h1>カレンダー初期設定</h1>
  <p>店舗の名前を設定します。後から変更可能です。</p>
</div>

<%= form_for @calendar, url: introductions_create_calendar_path do |f| %>
  <%= render 'layouts/error_messages', model: @calendar %>
  <div class="form-group">
    <label for="inputEmail" class="col-sm-4 col-form-label">表示カレンダー名<i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="お店の名前の設定です。"></i><span class="badge badge-danger">必須</span></label>
    <div class="col-sm-8">
      <%# <input type="email" class="form-control" id="inputEmail" placeholder="Eメール"> %>
      <%= f.text_field :calendar_name, class: "form-control", required: "required" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail" class="col-sm-4 col-form-label">お店の電話番号<i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="お店の電話番号の設定です"></i><span class="badge badge-danger">必須</span></label>
    <div class="col-sm-8">
      <%# <input type="email" class="form-control" id="inputEmail" placeholder="Eメール"> %>
      <%= f.text_field :phone, class: "form-control", required: "required" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail" class="col-sm-4 col-form-label">お店の住所<i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="お店の住所の設定です。"></i></label>
    <div class="col-sm-8">
      <%# <input type="email" class="form-control" id="inputEmail" placeholder="Eメール"> %>
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <%= f.submit "登録", class: "btn btn-primary", data: {confirm: "更新しますか？"} %>
<% end %>

<script>
$(function () {
  $('[data-toggle="tooltip"]').tooltip()
})
</script>