<div>
  <h1>スタッフ初期設定</h1>
  <p>スタッフを設定します。後から変更可能です。</p>
</div>


<%= form_for @staff, url: introductions_create_staff_path do |f| %>
  <%= render 'layouts/error_messages', model: @staff %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>項目</th>
          <th>設定値</th>
          <th>説明</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">スタッフ名</th>
          <td><%= f.text_field :name, class: "form-control", required: true %></td>
          <td>スタッフの名前です。あとで削除、編集可能です。</td>
        </tr>
        <tr>
          <th scope="row">表示カレンダー名</th>
          <td><%= f.text_area :description, class: "form-control" %></td>
          <td>スタッフの自己紹介を書いてください。（空欄でも大丈夫です。）</td>
        </tr>
        <%= f.hidden_field :calendar_id %>
        <tr>
          <th scope="row"><%= f.submit "登録", class: "btn btn-primary", data:{confirm: "登録が完了してもカレンダーは公開されません。この後のページで公開設定を行ってください。"} %></th>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    </table>
<% end %>

